<p id="notice"><%= notice %></p>


<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    <thead>

<tbody>
    <% @Books.each do|book| %>
        <tr>
            <td><%= book.name %> </td>
            <td><%= link_to "Show", "/books/:id" %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>